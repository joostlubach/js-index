{
  "name": "js-index",
  "displayName": "JS Index",
  "description": "Builds a JS/TS index out of files in the directory.",
  "icon": "icon.png",
  "version": "0.3.4",
  "publisher": "joostlubach",
  "author": {
    "name": "Joost Lubach",
    "publishername": "joostlubach"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joostlubach/js-index.git"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:js-index.buildIndex"
  ],
  "main": "./out/main",
  "contributes": {
    "commands": [
      {
        "command": "js-index.buildIndex",
        "title": "Build index"
      }
    ],
    "keybindings": [
      {
        "command": "js-index.buildIndex",
        "key": "ctrl+k i",
        "mac": "cmd+k i"
      }
    ],
    "configuration": {
      "title": "js-index configuration",
      "type": "object",
      "properties": {
        "js-index.defaultTemplate": {
          "type": "string",
          "default": "export {default as ${variable}} from ${relpath};",
          "description": "The default template to use when exporting files"
        },
        "js-index.quotes": {
          "type": "string",
          "default": "double",
          "enum": [
            "single",
            "double"
          ],
          "description": "The quote style to use when quoting literals"
        },
        "js-index.alignmentMarker": {
          "type": "string",
          "default": "|",
          "description": "The marker to use for alignment"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn esbuild-base -- --sourcemap",
    "esbuild-watch": "yarn esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.110",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "esbuild": "^0.13.14",
    "mocha": "^2.3.3",
    "typescript": "^4.1.5",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "lodash": "^4.17.19"
  }
}
